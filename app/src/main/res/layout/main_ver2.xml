<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:backgroundTint="@color/main_color"
        android:layout_marginTop="-30dp"
        android:clickable = "false"
        android:focusable="false"
        android:checkable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            style="@style/textStyle2_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_access_time_24_white"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_start"
            style="@style/textStyle2_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_location_on_24_white"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_end"
            style="@style/textStyle2_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_location_on_24_white"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_roadAddress"
            style="@style/textStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/light3_gray" />
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        >


        <TextView
            style="@style/textStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="right"
            android:text="출발지와 목적지를 설정해주세요" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/light2_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_start"
                style="@style/textStyle2_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:backgroundTint="@color/light_gray"
                android:text="출발지 설정" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_end"
                style="@style/textStyle2_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:backgroundTint="@color/light_gray"
                android:text="목적지 설정" />
        </LinearLayout>

        <TextView
            style="@style/textStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="시간을 설정해주세요" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/light2_gray" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_time"
            style="@style/textStyle2_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn"
            android:backgroundTint="@color/light_gray"
            android:text="시간 설정" />

</LinearLayout>

<androidx.appcompat.widget.AppCompatButton
android:background="@color/main_color"
android:fontFamily="@font/gmarketsansttfbold"
android:id="@+id/btn_matching"
android:layout_gravity="bottom"
android:layout_height="wrap_content"
android:layout_width="match_parent"
android:minWidth="0dp"
android:text="매칭 시작"
android:textColor="@color/white"
android:textSize="18dp" /></FrameLayout>